pipeline {
    agent any
    
    environment {
        APP_ENV = "staging"
    }
    
    options {
        // העליתי ל-2 דקות כדי שה-sleep של ה-15 שניות לא יכשיל את הריצה
        timeout(time: 2, unit: 'MINUTES') 
    }
    
    stages {
        stage('Hello') {
            steps {
                sleep time: 15, unit: 'SECONDS'
                echo "build number: ${env.BUILD_NUMBER}"
                echo 'Hello World'
                echo "${APP_ENV}"
            }
        } // סגירת ה-stage הראשון
        
        stage("stage number one") {
            steps {
                echo "Avital & Rachely"
            }
        }
        
        stage('build') {
            steps {
                echo 'The second stage'
                echo "The second step"
            }
        }
    } // סגירת ה-stages
} // סגירת ה-pipeline
