pipeline {
    agent any
    
    environment {
        APP_ENV = "staging"
    }
    
    options {
        // הגבלת זמן לריצה כולה כדי למנוע תקיעה של השרת
        timeout(time: 2, unit: 'MINUTES') 
    }
    
    stages {
        stage('connect to github') {
            steps {
                withCredentials([
                    usernamePassword(
                        credentialsId: 'my_security_github', 
                        usernameVariable: 'USER', 
                        passwordVariable: 'PASS'
                    )
                ]) {
                    // פקודות Batch עבור שרת מבוסס Windows
                    bat '''
                    @echo off
                    echo Deploying as %USER%
                    REM כאן תבוא הפקודה שמשתמשת ב-%PASS%
                    '''
                }
            } 
        }

        stage('Hello') {
            steps {
                sleep time: 15, unit: 'SECONDS'
                echo "build number: ${env.BUILD_NUMBER}"
                echo 'Hello World'
                echo "${APP_ENV}"
            }
        }
        
        stage("stage number one") {
            steps {
                echo "Avital & Rachely"
            }
        }
        
        stage('build') {
            steps {
                echo 'The second stage'
                echo "The second step"
            }
        }
    } // סגירת ה-stages
} // סגירת ה-pipeline
